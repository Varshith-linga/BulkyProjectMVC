@page
@model BulkyWebRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="CategoryList.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>


        <div class="mb-3 row p-1">
            <label asp-for="CategoryList.Name" class="p-0"></label>
            <input asp-for="CategoryList.Name" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="CategoryList.DisplayOrder" class="p-0"></label>
            <input asp-for="CategoryList.DisplayOrder" type="text" class="form-control" disabled />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="/Categories/Index" class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


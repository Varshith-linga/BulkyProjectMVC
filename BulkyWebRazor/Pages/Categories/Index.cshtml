@page
@model BulkyWebRazor.Pages.Categories.IndexModel



<div class="Container">
    <div class="row pt-4 pb-3">
        <div class="col-9">
            <h2 class="text-Primary">Category List</h2>
        </div>
        <div class="col-3 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>Name</th>
        <th>DisplayOrder</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList){
        <tr>
            <td>@obj.Id</td>
            <td>
                @obj.Name
            </td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square mx-2"></i>Edit</a>&nbsp;
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id"  class="btn btn-danger"><i class="bi bi-trash3-fill mx-2"></i>Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
